                    "Forward": [ -1, -1, -1 ]
                }
            ],
            "Actors": [
                {
                    "Name": "main_actor",
                    "Position": [ 0, 0, 0],
                    "Components": [
                        {
                            "Type": "Mesh",
                            "Shader": "default_shader",
                            "File": "assets/models/monkey/monkey.obj"
                        },
                        {
                            "Type": "Script",
                            "File": "assets/scripts/Lighting_example.lua"
                        }
                    ]
                }
            ]
        }
    ]
