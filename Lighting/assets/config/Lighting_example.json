{
    "Window": {
        "Width": 640,
        "Height": 480,
        "Title": "Dusk - Lighting Example"
    },
    "Shaders": [
        {
            "Name": "default_shader",
            "BindData": [ "LightingData" ],
            "Files": [
                {
                    "Type": "Vertex",
                    "File": "assets/shaders/Lighting_default.vs.glsl"
                },
                {
                    "Type": "Fragment",
                    "File": "assets/shaders/Lighting_default.fs.glsl"
                }
            ]
        }
    ],
    "StartScene": "default_scene",
    "Scenes": [
        {
            "Name": "default_scene",
            "StartCamera": "default_camera",
